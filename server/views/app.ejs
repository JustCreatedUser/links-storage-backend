<%- include('./partials/sidebar.ejs') %>

<main data-display="<%= app %>"></main>
<section class="editor link-editor">
  <div>
    <input id="descriptionInput" type="text" placeholder="Name" />
    <textarea id="urlInput" placeholder="URL"></textarea>
    <input
      autocomplete="off"
      type="search"
      list="groupDatalist"
      id="groupInput"
    />
    <datalist id="groupDatalist">
      <option value="Ungrouped">Ungrouped</option>
    </datalist>
    <button class="edit_add-button" id="edit_add-link-button"></button>
    <button class="delete-button" id="delete-link-button">Delete</button>
  </div>
</section>
<section class="editor group-editor">
  <div>
    <input id="nameInput" type="text" placeholder="Name" />
    <ol class="group-links-list">
